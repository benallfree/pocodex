{
  "name": "pocodex",
  "version": "0.0.1",
  "description": "PocketBase Code Exchange - the unofficial PocketBase plugin hub",
  "repository": {
    "type": "git",
    "url": "https://github.com/@pocodex/pocodex"
  },
  "homepage": "https://pocodex.dev",
